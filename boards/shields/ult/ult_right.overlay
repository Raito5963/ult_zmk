#include <dt-bindings/zmk/matrix_transform.h>
#include "ult.dtsi"

/* Zephyr 4.1 対応: NFCピンをGPIO化 */
&uicr {
    nfct-pins-as-gpios;
};

[cite_start]/* Zephyr 4.1 対応: DCDC有効化 [cite: 6] */
&reg1 {
    regulator-initial-mode = <1>;
};

&xiao_serial { status = "disabled"; };

/ {
    chosen {
        zmk,kscan = &kscan0;
        /* 右手用のマトリックス変換を適用するためにトランスフォームをオフセットする場合などはここ */
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-charlieplex";
        wakeup-source;
        
        [cite_start]/* 左手側と同じピンの並び順（物理的なIO 0~5の対応を維持） [cite: 10, 11] */
        gpios = <&gpio1 12 GPIO_ACTIVE_HIGH>, // D7 (P1.12)
                <&gpio1 11 GPIO_ACTIVE_HIGH>, // D6 (P1.11)
                <&gpio0 29 GPIO_ACTIVE_HIGH>, // D3 (P0.29)
                <&gpio0 28 GPIO_ACTIVE_HIGH>, // D2 (P0.28)
                <&gpio0 3  GPIO_ACTIVE_HIGH>, // D1 (P0.03)
                <&gpio0 2  GPIO_ACTIVE_HIGH>; // D0 (P0.02)
    };

    /* 右手側エンコーダー1 */
    right_encoder_1: encoder_right_1 {
        compatible = "alps,ec11";
        a-gpios = <&gpio1 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>; // D10
        b-gpios = <&gpio1 14 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>; // D9
        steps = <80>;
        status = "okay";
    };

    /* 右手側エンコーダー2 (NFCピン) */
    right_encoder_2: encoder_right_2 {
        compatible = "alps,ec11";
        a-gpios = <&gpio0 9  (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>; // NFC1
        b-gpios = <&gpio0 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>; // NFC2
        steps = <80>;
        status = "okay";
    };

    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&right_encoder_1 &right_encoder_2>;
        triggers-per-rotation = <20>;
    };
};