#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,matrix-transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>; // Left 6 + Right 6
        rows = <4>;

        // (Row, Col) notation here refers to the Logical Layout in Keymap
        // RC(anode, cathode) maps the charlieplex pair.
        // Left side uses columns 0-5, Right side uses columns 6-11 (offset by 6)
        
        map = <
            // Row 1
            RC(3,1) RC(2,3) RC(1,5) RC(1,2) RC(0,4) RC(0,1)    RC(3,7) RC(2,9) RC(1,11) RC(1,8) RC(0,10) RC(0,7)
            // Row 2
            RC(3,2) RC(2,4) RC(2,1) RC(1,3) RC(0,5) RC(0,2)    RC(3,8) RC(2,10) RC(2,7) RC(1,9) RC(0,11) RC(0,8)
            // Row 3
            RC(3,3) RC(2,5) RC(2,2) RC(1,4) RC(1,1) RC(0,3)    RC(3,9) RC(2,11) RC(2,8) RC(1,10) RC(1,7) RC(0,9)
            // Row 4 (Thumbs + Encoder Buttons)
            RC(3,4) RC(3,5) RC(4,1) RC(4,2) RC(4,3)            RC(3,10) RC(3,11) RC(4,7) RC(4,8) RC(4,9)
        >;
    };
};