#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,matrix-transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <6>;
        map = <
/* 左手側の定義 (0~5を使用) */                      /* 右手側の定義 (ここも 0~5 を使う) */
RC(3,0) RC(2,3) RC(1,5) RC(1,2) RC(0,4) RC(0,1)  RC(0,1) RC(0,4) RC(1,2) RC(1,5) RC(2,3) RC(3,1)
RC(3,2) RC(2,4) RC(2,0) RC(1,3) RC(0,5) RC(0,2)  RC(0,2) RC(0,5) RC(1,3) RC(2,1) RC(2,4) RC(3,2)
RC(3,3) RC(2,5) RC(2,2) RC(1,4) RC(1,0) RC(0,3)  RC(0,3) RC(1,1) RC(1,4) RC(2,2) RC(2,5) RC(3,3)
RC(3,4) RC(3,5) RC(4,1) RC(4,2) RC(4,3)          RC(4,3) RC(4,2) RC(4,1) RC(3,5) RC(3,4)
        >;
    };
};