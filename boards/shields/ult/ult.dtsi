#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,matrix-transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <6>;
        map = <
/* 左手側：回路図の IO番号 と DI番号 をインデックス(0~5)に変換 */
/* 1段目: 回路図 RC1-1 ~ RC4-1 系列 (DI1を使用) */
RC(0,1) RC(1,1) RC(2,1) RC(3,1) RC(4,1) RC(0,2)    RC(0,7) RC(0,10) RC(1,8) RC(1,11) RC(2,9) RC(3,7)
/* 2段目: 回路図 RCx-2 系列 (DI2を使用) */
RC(0,2) RC(1,2) RC(2,2) RC(3,2) RC(4,2) RC(1,2)    RC(0,8) RC(0,11) RC(2,7) RC(1,9)  RC(2,10) RC(3,8)
/* 3段目: 回路図 RCx-3 系列 (DI3を使用) */
RC(0,3) RC(1,3) RC(2,3) RC(3,3) RC(4,3) RC(2,3)    RC(0,9) RC(1,7)  RC(2,8) RC(1,10) RC(2,11) RC(3,9)
/* 4段目: 親指等 */
RC(0,4) RC(1,4) RC(2,4) RC(3,4) RC(4,4)            RC(4,9) RC(4,8)  RC(4,7) RC(3,11) RC(3,10)
        >;
    };
};