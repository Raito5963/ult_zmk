#include <dt-bindings/zmk/matrix_transform.h>

/ {
    /* 1. モジュールが探している「名前」を定義する (エイリアス) */
    aliases {
        led-red = &red_led;
        led-green = &green_led;
        led-blue = &blue_led;
    };

    chosen {
        zmk,matrix-transform = &default_transform;
    };

    /* 2. 物理的なLEDピンと名前の紐付け */
    leds {
        compatible = "gpio-leds";
        red_led: led_red {
            gpios = <&gpio0 26 GPIO_ACTIVE_LOW>;
        };
        green_led: led_green {
            gpios = <&gpio0 6 GPIO_ACTIVE_LOW>;
        };
        blue_led: led_blue {
            gpios = <&gpio0 30 GPIO_ACTIVE_LOW>;
        };
    };

    /* 3. rgbled-widget 用のアダプター定義 */
    rgbled_widget: rgbled_widget {
        compatible = "zmk,rgbled-widget";
        label = "RGBLED_WIDGET";
        red-gpios = <&gpio0 26 GPIO_ACTIVE_LOW>;
        green-gpios = <&gpio0 6 GPIO_ACTIVE_LOW>;
        blue-gpios = <&gpio0 30 GPIO_ACTIVE_LOW>;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <5>;
        map = <
/* 左手 6x3 + 5 */
RC(3,0) RC(2,3) RC(1,5) RC(1,2) RC(0,4) RC(0,1)                  RC(0,7) RC(0,10) RC(1,8) RC(1,11) RC(2,9) RC(3,6)
RC(3,1) RC(2,4) RC(2,0) RC(1,3) RC(0,5) RC(0,2)                  RC(0,8) RC(0,11) RC(1,9) RC(2,6) RC(2,10) RC(3,7)
RC(3,2) RC(2,5) RC(2,1) RC(1,4) RC(1,0) RC(0,3)                  RC(0,9) RC(1,6) RC(1,10) RC(2,7) RC(2,11) RC(3,8)
                RC(3,4) RC(3,5) RC(4,0) RC(4,1) RC(4,2)  RC(4,8) RC(4,7) RC(4,6) RC(3,11) RC(3,10)
        >;
    };
};